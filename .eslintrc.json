{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-props-no-spreading": "off",
        "react/no-array-index-key": "off",
        "linebreak-style": 0,
        "react/prop-types": 0,
        "max-len": [2, 150, 2, { "ignoreUrls": true }],
        "react/jsx-filename-extension": [0],
        "jsx-a11y/no-static-element-interactions": [0],
        "jsx-a11y/click-events-have-key-events": "off",
        "camelcase": "off", 
        "no-shadow": "off",
        "import/no-cycle": "off",
        "import/prefer-default-export": "off",
        "no-plusplus": "off", 
        "react/no-find-dom-node": "off",
        "dot-notation": ["error", { "allowPattern": "__isNew__" }]
    }
}